<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
          
        </dl>
        <header class="form-header">
          <h5>New Review</h5> 
        </header> 
         <div class="row">
            <div class="col-sm-6 col-sm-offset-1">
              <%= form_for [@product, @product.reviews.new] do |form| %>

                <% if form.object.errors.any? %>
                  <div class="alert alert-danger">
                    <strong>The following errors prevented saving:</strong>
                    <ul>
                      <% form.object.errors.full_messages.each do |error| %>
                        <li><%= error %></li>
                      <% end %>
                    </ul>
                  </div>
                <% end %>

                <div class="form-group">
                  <%= form.label :description %>
                  <%= form.text_area :description, {id: :product_description} %>
                </div>

                <div class="form-group">
                  <%= form.label :rating %>
                  <%= form.select :rating, (1..5), {id: :product_rating} %>
                </div>

                <%= form.hidden_field :user_id, :value => @user.id %>
                <%= form.hidden_field :product_id, :value => @product.id  %>

                <%= form.submit 'Create New Review', class: 'btn btn-primary' %>
              <% end %>
            </div>
        </div>

        <div class="col-sm-8">
          <div>Reviews</div>
          <dl class="dl-horizontal">
              <% @product.reviews.each do |review| %> 
                  <dt>Name</dt> 
                  <dd><%= review.user_id %></dd>
                  <dt>Description</dt>
                  <dd><%= review.description %></dd>
                  <dt>Rating</dt> 
                  <dd> <%= review.rating %></dd> 
              <% end %> 
            </dl>
        </div> 
      </div>
    </div>

  </article>

</section>
